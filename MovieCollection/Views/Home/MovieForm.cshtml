@{
    ViewData["Title"] = "Movie Form";
}

@model MovieCollection.Models.Movie

<div class="">
    <h1 class="display-4 text-center">Movie Form</h1>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Category)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="RatingId">Rating:</label>
        <select asp-for="RatingId">
            <option value="">Select a Rating</option>
            @foreach (Rating r in ViewBag.Rating)
            {
                <option value="@r.RatingId">@r.RatingName</option>
            }

        </select><br />

        <label asp-for="Edited">Edited:</label> @*Optional*@
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo">Lent To:</label> @*Optional*@
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes:</label> @*Optional*@
        <input asp-for="Notes" /><br /><br />

        <button class="padded" type="submit">Add Movie to Collection</button>

    </form>
</div>